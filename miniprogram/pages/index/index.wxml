<view class="bg" hover-class="none" hover-stop-propagation="false">
</view>

<view class="container">
  <view class="header" hover-class="none" hover-stop-propagation="false">
    你好, Tony

  </view>
  <view class="schedule-container" hover-class="none" hover-stop-propagation="false">
    <view class="top-area" hover-class="none" hover-stop-propagation="false">
      <month-title />
      <view class="top-right" hover-class="none" hover-stop-propagation="false" bindtap="goToSchedule">
        查看日程
        <image src="/images/area-right-white.svg"></image>

      </view>
    </view>

    <view class="current-week">
      <current-week timestamp="{{1735660800000}}" />
      <!-- 其他内容 -->
    </view>

    <schedule-item time="{{1735660800000}}" content="本周没有需要关注的日程" styleClass="schedule-coral" />

  </view>

  <health-list list="{{healthManageList}}" />

  <view class="purchased-services">
    <view class="title">已购服务</view>
    <view class="service-list">
      <view class="service-item" wx:for="{{purchasedServices}}" wx:key="id">
        <image class="service-icon" src="{{item.icon}}" mode="aspectFill"></image>
        <view class="service-info">
          <view class="service-name">{{item.name}}</view>
          <view class="service-desc">{{item.description}}</view>
        </view>
      </view>
    </view>
  </view>
</view>